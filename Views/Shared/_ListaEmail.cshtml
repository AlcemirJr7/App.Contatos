 <div class="col-md-6">
        <label for="AdicinalEmail" class="form-label">Adicionar Email</label>               
        <div class="input-group">            
            <input type="text" class="form-control" id="emailContato">
            <button type="button" class="btn btn-dark ml-2" onclick="AdicionarEmail()" id="addEmail">+</button>
        </div>      
    </div>   
        
    <div class="col-md-6 overflow-auto mt-4" style="max-width: 555px; max-height: 150px;">                   
        <table id="ListaEmail" class="table table-striped table-sm" style="display: fixed;">
            <thead>
            <tr>
                <th scope="col">Lista Email</th>              
                <th scope="col" class=" text-center">Remover</th>
            </tr>
            </thead>
            <tbody>
                                                                                          
            </tbody>
        </table>        
        
    </div> 

<script type="text/javascript">
               

    const lista = new Array();

    var idx = 0;
   
    function ExcluirLinha(item){        
        var tr = $(item).closest('tr');
        tr.remove();
    }

    function  AdicionarEmail() {
       

        var email = $("#emailContato").val();                
        
        const listaEmail = document.querySelectorAll('#ListaEmail>tbody tr');

        for (let i = 0; i < listaEmail.length; i++) {

            let emailAdd = listaEmail[i].children[0].textContent;
            
            if (email == emailAdd){
                alert('Email já adicionado!');
                return false;
            }
                        
        }

        // validação de email 
        if (email == ''){
            alert('Email não pode ser vazio.')
            return false;
        }               
           
                
        $("#ListaEmail>tbody").append("<tr><td scope='row'>"+email+"</td> <td class='text-center'> <button type='button' onclick='ExcluirLinha(this)' class='btn btn-danger ml-sm-1'>x</button></td></tr>");        
                            
    }

</script>
